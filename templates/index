    <script>
        let mediaRecorder;
        let audioChunks = [];
        let timerInterval;
        let audioContext;
        let analyser;
        
        async function startTest() {
            const startBtn = document.getElementById('startBtn');
            const status = document.getElementById('status');
            const timer = document.getElementById('timer');
            const results = document.getElementById('results');
            const calibrationPhase = document.getElementById('calibrationPhase');
            const voiceIndicator = document.getElementById('voiceIndicator');
            
            // Reset UI
            audioChunks = [];
            results.classList.remove('show');
            timer.textContent = '';
            status.textContent = '';
            voiceIndicator.classList.remove('active');
            
            try {
                // Request microphone access
                status.textContent = 'üé§ Requesting microphone access...';
                
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    audio: {
                        sampleRate: 16000,
                        channelCount: 1,
                        echoCancellation: false,
                        noiseSuppression: false,
                        autoGainControl: false
                    }
                });
                
                // Setup audio visualization for feedback
                audioContext = new AudioContext();
                const source = audioContext.createMediaStreamSource(stream);
                analyser = audioContext.createAnalyser();
                analyser.fftSize = 256;
                source.connect(analyser);
                
                // Phase 1: Calibration (0.5 seconds)
                startBtn.disabled = true;
                calibrationPhase.classList.add('active');
                status.textContent = 'üîä Calibrating to ambient noise...';
                
                // Show noise level during calibration
                const calibrationInterval = setInterval(() => {
                    const volume = getVolume();
                    document.getElementById('calibrationBar').style.width = volume + '%';
                }, 50);
                
                // Wait 500ms for calibration
                await new Promise(resolve => setTimeout(resolve, 500));
                
                clearInterval(calibrationInterval);
                calibrationPhase.classList.remove('active');
                
                // Phase 2: Ready to record
                status.textContent = '‚úÖ Ready! Take a deep breath, then say "ahhhh"';
                voiceIndicator.classList.add('active');
                
                // Create recorder
                mediaRecorder = new MediaRecorder(stream, {
                    mimeType: 'audio/webm;codecs=opus'
                });
                
                mediaRecorder.ondataavailable = (event) => {
                    if (event.data.size > 0) {
                        audioChunks.push(event.data);
                    }
                };
                
                mediaRecorder.onstop = async () => {
                    voiceIndicator.classList.remove('active');
                    status.textContent = '‚è≥ Processing audio...';
                    
                    // Convert to blob
                    const audioBlob = new Blob(audioChunks, { type: 'audio/webm' });
                    
                    // Convert to base64
                    const reader = new FileReader();
                    reader.readAsDataURL(audioBlob);
                    
                    reader.onloadend = async () => {
                        const base64Audio = reader.result.split(',')[1];
                        
                        // Send to backend
                        try {
                            const response = await fetch('/api/analyze-mpt', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    audio_data: base64Audio
                                })
                            });
                            
                            const result = await response.json();
                            
                            if (result.success) {
                                displayResults(result);
                            } else {
                                status.textContent = '‚ùå ' + (result.error || 'Processing failed');
                                console.error('Error:', result);
                            }
                        } catch (error) {
                            status.textContent = '‚ùå Network error: ' + error.message;
                            console.error('Network error:', error);
                        }
                    };
                    
                    // Stop all media tracks
                    stream.getTracks().forEach(track => track.stop());
                    if (audioContext) {
                        audioContext.close();
                    }
                    startBtn.disabled = false;
                };
                
                // Start recording
                mediaRecorder.start(100);
                status.textContent = 'üé§ Recording... Speak now!';
                
                // Show live voice level
                const volumeInterval = setInterval(() => {
                    if (mediaRecorder && mediaRecorder.state === 'recording') {
                        const volume = getVolume();
                        document.getElementById('voiceBar').style.width = volume + '%';
                    } else {
                        clearInterval(volumeInterval);
                    }
                }, 50);
                
                // Show timer (for user feedback only)
                let seconds = 0;
                timerInterval = setInterval(() => {
                    seconds += 0.1;
                    timer.textContent = seconds.toFixed(1) + 's';
                }, 100);
                
                // Auto-stop after 30 seconds max
                const autoStopTimeout = setTimeout(() => {
                    if (mediaRecorder && mediaRecorder.state === 'recording') {
                        stopRecording();
                    }
                }, 30000);
                
                // Allow manual stop
                startBtn.onclick = () => {
                    clearTimeout(autoStopTimeout);
                    stopRecording();
                };
                startBtn.textContent = '‚èπÔ∏è Stop Recording';
                startBtn.disabled = false;
                
            } catch (error) {
                status.textContent = '‚ùå Microphone access denied. Please allow microphone access.';
                console.error('Microphone error:', error);
                startBtn.disabled = false;
            }
        }
        
        function getVolume() {
            if (!analyser) return 0;
            
            const dataArray = new Uint8Array(analyser.frequencyBinCount);
            analyser.getByteFrequencyData(dataArray);
            
            const average = dataArray.reduce((a, b) => a + b) / dataArray.length;
            return Math.min(100, (average / 256) * 200); // Scale to 0-100%
        }
        
        function stopRecording() {
            if (timerInterval) {
                clearInterval(timerInterval);
            }
            if (mediaRecorder && mediaRecorder.state === 'recording') {
                mediaRecorder.stop();
            }
            const startBtn = document.getElementById('startBtn');
            startBtn.textContent = 'üéôÔ∏è Start Test';
            startBtn.onclick = startTest;
        }
        
        function displayResults(result) {
            const results = document.getElementById('results');
            const status = document.getElementById('status');
            
            document.getElementById('mptValue').textContent = result.mpt + ' seconds';
            document.getElementById('urgency').textContent = result.classification.urgency;
            document.getElementById('esiLevel').textContent = 'ESI-' + result.classification.esi_level;
            document.getElementById('category').textContent = result.classification.category;
            document.getElementById('action').textContent = result.classification.action;
            
            // Show debug info if available
            if (result.debug_info) {
                document.getElementById('debugNoise').textContent = 
                    result.debug_info.noise_threshold.toFixed(4);
                document.getElementById('debugVAD').textContent = 
                    'Mode ' + result.debug_info.vad_aggressiveness;
                document.getElementById('debugSpeech').textContent = 
                    result.debug_info.speech_percentage + '%';
            }
            
            results.className = 'results show ' + result.classification.color;
            status.textContent = '‚úÖ Test Complete!';
            
            document.getElementById('timer').textContent = '';
        }
    </script>
</body>
</html>
